.utility {
  min-height: 60px;
  padding: 8px 0;
  @media (max-width: $screen-sm-min) {
    margin-top: 40px;
  }
}

.crumbs a {
  margin-right: 12px;
}

.action-row {
  padding-bottom: 12px;
}

.add-another {
  margin-top: 24px;
  margin-bottom: 36px;
  text-align: right;
}

.how-to-popover:focus {
  outline: none;
}

.popover ol {
  padding-left: 0 !important;
  -webkit-padding-start: 10px !important;
}

hr.dark {
  border-top-color: $gray-065;
}

.home-intro {
  @include lora-normal;
  font-size: 1.2em;
  margin-bottom: 40px;
  @media (min-width: $screen-sm-min) {
    margin: 30px auto 0;
  }
}
