- title = "Neighborhoods"
- content_for :title, title

= render :partial => 'menus/admin_tabs'

.o-page
  .o-page__title
    %h1= content_for :title
    .o-page__action.o-page__action--stacked
      = link_to new_admin_neighborhood_path, class: 'btn btn-primary pull-right margin-bottom-02' do
        %span.icon-plus
        Add a Neighborhood

  .row
    .col-sm-12
      - @prompt = "Search neighborhoods..."
      .row
        .col-sm-6
          = render 'search_form'
  .row
    .col-sm-8
      %p= page_entries_info @neighborhoods

  .row.table-utilities
    .col-sm-12
      .table-responsive
        %table.table.table-condensed
          %thead
            %tr
              %th
                Name
              %th
              %th
          %tbody
            - @neighborhoods.each do |neighborhood|
              %tr
                %td
                  = neighborhood.name
                %td
                  = link_to edit_admin_neighborhood_path(neighborhood), class: ['btn', 'btn-sm', 'btn-secondary'] do
                    %span.icon-pencil
                    Edit
                %td
                  = link_to admin_neighborhood_path(neighborhood),  method: :delete, data: {confirm: "Would you really like to delete neighborhood? #{neighborhood.name}"}, class: ['btn', 'btn-sm', 'btn-danger'] do
                    %span.icon-cross
                    Delete
      %p= paginate @neighborhoods