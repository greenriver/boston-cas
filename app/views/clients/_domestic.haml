.c-card__content-group
  .c-card__content-group-heading
    .c-card__content-group-icon.icon-child
    %h5 Domestic
  %ul.c-detailed-list<
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:family_member][:title]
      %span.c-detailed-list__value= boolean_icon (@client.family_member)

    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:child_in_household][:title]
      %span.c-detailed-list__value= boolean_icon (@client.child_in_household)

    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:foster_care][:title]
      %span.c-detailed-list__value= boolean_icon (@client.foster_care)

    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:open_case][:title]
      %span.c-detailed-list__value= boolean_icon (@client.open_case)

    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:income_total_monthly][:title]
      %span.c-detailed-list__value= number_to_currency(@client.income_total_monthly)

    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:income_maximization_assistance_requested][:title]
      %span.c-detailed-list__value= boolean_icon (@client.income_maximization_assistance_requested)

    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:service_need][:title]
      %span.c-detailed-list__value= boolean_icon (@client.service_need)

    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:strengths][:title]
      %span.c-detailed-list__value= @client.strengths&.join(', ')&.titleize

    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:challenges][:title]
      %span.c-detailed-list__value= @client.challenges&.join(', ')&.titleize

    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:willing_case_management][:title]
      %span.c-detailed-list__value= boolean_icon @client.willing_case_management
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:employed_three_months][:title]
      %span.c-detailed-list__value= boolean_icon @client.employed_three_months
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:living_wage][:title]
      %span.c-detailed-list__value= boolean_icon @client.living_wage
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:need_daily_assistance][:title]
      %span.c-detailed-list__value= boolean_icon @client.need_daily_assistance
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:full_time_employed][:title]
      %span.c-detailed-list__value= boolean_icon @client.full_time_employed
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:can_work_full_time][:title]
      %span.c-detailed-list__value= boolean_icon @client.can_work_full_time
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:willing_to_work_full_time][:title]
      %span.c-detailed-list__value= boolean_icon @client.willing_to_work_full_time
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:rrh_successful_exit][:title]
      %span.c-detailed-list__value= boolean_icon @client.rrh_successful_exit
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:th_desired][:title]
      %span.c-detailed-list__value= boolean_icon @client.th_desired
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:site_case_management_required][:title]
      %span.c-detailed-list__value= boolean_icon @client.site_case_management_required
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:ongoing_case_management_required][:title]
      %span.c-detailed-list__value= boolean_icon @client.ongoing_case_management_required
    %li.c-detailed-list__item
      %span.c-detailed-list__label= @column_data[:currently_fleeing][:title]
      %span.c-detailed-list__value.d-flex
        - if @client.currently_fleeing && @client.dv_date.present?
          since #{@client.dv_date}
        - else
          #{boolean_icon false}
