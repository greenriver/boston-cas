.col-md-6.c-card__content-group
  .c-card__content-group-heading
    .c-card__content-group-icon.icon-file-drawn
    %h5 Enrollments
  - if @client.has_enrollments?
    %ul.c-detailed-list<
      %li.list-unstyled
        - if @client.enrolled_in_es
          .client__service_type_es
            .service-type__program-type ES
        - if @client.enrolled_in_so
          .client__service_type_so
            .service-type__program-type SO
        - if @client.enrolled_in_sh
          .client__service_type_sh
            .service-type__program-type SH
        - if @client.enrolled_in_th
          .client__service_type_th
            .service-type__program-type TH
        - if @client.enrolled_in_rrh
          .client__service_type_rrh
            .service-type__program-type RRH
        - if @client.enrolled_in_psh
          .client__service_type_psh
            .service-type__program-type PSH
        - if @client.enrolled_in_ph
          .client__service_type_ph
            .service-type__program-type PH
  - else
    %p.font-no-data None
