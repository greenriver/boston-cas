%ul.c-detailed-list<
  %li.c-detailed-list__item
    %span.c-detailed-list__label Length of Time Homeless (Sheltered) - Warehouse
    %span.icon-info{data: {toggle: :tooltip, title: 'Check the clientâ€™s record in the Warehouse; how many sheltered homeless nights in a shelter in the last 3 years does the client have?'}}
    %span.c-detailed-list__value= number_with_delimiter(@client.calculated_homeless_nights_sheltered)
  %li.c-detailed-list__item
    %span.c-detailed-list__label Length of Time Homeless (Sheltered) - Non-HMIS
    %span.icon-info{data: {toggle: :tooltip, title: 'Does the client have additional sheltered nights outside of HMIS/Warehouse? (At a shelter or hotel/motel paid by government or charity.)'}}
    %span.c-detailed-list__value= number_with_delimiter(@client.additional_homeless_nights_sheltered)
  %li.c-detailed-list__item
    %span.c-detailed-list__label Length of Time Homeless (Unsheltered) - Warehouse
    %span.icon-info{data: {toggle: :tooltip, title: 'Check the clientâ€™s record in the Warehouse; how many unsheltered homeless nights in the last 3 years does the client have?'}}
    %span.c-detailed-list__value= number_with_delimiter(@client.calculated_homeless_nights_unsheltered)
  %li.c-detailed-list__item
    %span.c-detailed-list__label Length of Time Homeless (Unsheltered) - Non-HMIS
    %span.icon-info{data: {toggle: :tooltip, title: 'Does the client have additional unsheltered  nights outside of HMIS/Warehouse? (Place not meant for human habitation/outside/car/station.)'}}
    %span.c-detailed-list__value= number_with_delimiter(@client.additional_homeless_nights_unsheltered)
  %li.c-detailed-list__item
    %span.c-detailed-list__label Total # of Sheltered Nights
    %span.icon-info{data: {toggle: :tooltip, title: 'Warehouse + added Boston homeless nights'}}
    %span.c-detailed-list__value= number_with_delimiter(@client.total_homeless_nights_sheltered)
  %li.c-detailed-list__item
    %span.c-detailed-list__label Total # of Unsheltered Nights
    %span.icon-info{data: {toggle: :tooltip, title: 'Warehouse + added Boston homeless nights'}}
    %span.c-detailed-list__value= number_with_delimiter(@client.total_homeless_nights_unsheltered)
  %li.c-detailed-list__item
    %span.c-detailed-list__label Total # of nights
    %span.icon-info{data: {toggle: :tooltip, title: 'Warehouse + added Boston homeless nights*: _____________________ (cannot exceed 1096)'}}
    %span.c-detailed-list__value= number_with_delimiter(@client.days_homeless_in_last_three_years)
  %li.c-detailed-list__item
    %span.c-detailed-list__label Last Homeless Contact
    %span.c-detailed-list__value= @client.calculated_last_homeless_night.try(:strftime, I18n.t('date.formats.default'))
  %li.c-detailed-list__item
    %span.c-detailed-list__label Chronically Homeless
    %span.c-detailed-list__value= boolean_icon @client.chronic_homeless
