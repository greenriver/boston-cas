%ul.nav.nav-tabs.margin-bottom-02
  - if active == 'show'
    %li.nav-item.active{role: 'presentation'}
      %a.nav-link{href: '#'}
        Client Details
  - else
    %li.nav-item= link_to 'Client Details', client_path(id: client_id), class: 'nav-link'

  - if active == 'matches'
    %li.nav-item.active{role: 'presentation'}
      %a.nav-link{href: '#'}
        Active Matches
  - elsif can_view_all_matches?
    %li.nav-item
      = link_to 'Active Matches', client_matches_path(client_id: client_id), class: 'nav-link'

  - if active == 'history'
    %li.nav-item.active{role: 'presentation'}
      %a.nav-link{href: '#'}
        Closed Matches
  - elsif can_view_all_matches?
    %li.nav-item
      = link_to 'Closed Matches', client_closed_matches_path(client_id: client_id), class: 'nav-link'

  - if active == 'contacts'
    %li.nav-item.active{role: 'presentation'}
      %a.nav-link{href: '#'}
        Default Contacts
  - else
    %li.nav-item
      = link_to 'Default Contacts', edit_client_contacts_path(client_id: client_id), class: 'nav-link'

  - if active == 'qualified_opportunities'
    %li.nav-item.active{role: 'presentation'}
      %a.nav-link{href: '#'}
        = Translation.translate('Qualified Opportunities')
  - else
    %li.nav-item
      = link_to Translation.translate('Qualified Opportunities'), client_qualified_opportunities_path(client_id: client_id), class: 'nav-link'
