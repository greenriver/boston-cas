.col-md-6.c-card__content-group
  .c-card__content-group-heading
    .c-card__content-group-icon.icon-group
    %h5= Translation.translate('Tags')
  - if @client.tags.present?
    %table.table
      %thead
        %tr
          %th= Translation.translate('Tag')
          %th Value
          %th From Assessment?
      %tbody
        - @client.tags.each do |id, rank|
          - tag = Tag.find(id)
          %tr
            %td= tag&.name
            %td.text-center= rank
            %td.c-detailed-list__value.text-center= boolean_icon tag&.rrh_assessment_trigger
  - else
    %p.font-no-data None
