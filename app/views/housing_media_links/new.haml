-# Partial: used polymorphically for building and unit attributes
-#   Arguments:
-#     housingable: currently a building or unit object
-#     link: a HousingMediaLink object

= content_for :modal_title do
  = Translation.translate('Add Photo or Video Link')

= simple_form_for @media_link, url:  polymorphic_path([@housingable, :housing_media_links]) do |f|
  = f.input :url, as: :url, placeholder: 'Please enter the URL to the photo or video', label: 'URL'
  = f.input :label, placeholder: 'Please enter the text for the photo or video link'

  = f.button :submit, value: 'Add Link'
