.table-responsive
  %table.table.table-condensed
    %thead
      - if client_identified?
        %th Last Name
        %th First Name
      - else
        %th Client Identifier
      %th Agency
      %th Assessment Score
      %th Assessment Date
      %th Status
      - if current_user.can_view_some_clients?
        %th CAS Client

    %tbody
      - @non_hmis_clients.each do |non_hmis_client|
        - current_assessment = non_hmis_client.current_assessment
        %tr
          - if client_identified?
            %td
              - if non_hmis_client.current_assessment.default?
                = link_to non_hmis_client.last_name, edit_identified_client_path(non_hmis_client)
              - else
                = link_to non_hmis_client.last_name, identified_client_path(non_hmis_client)
            %td
              - if non_hmis_client.current_assessment.default?
                = link_to non_hmis_client.first_name, edit_identified_client_path(non_hmis_client)
              - else
                = link_to non_hmis_client.first_name, identified_client_path(non_hmis_client)
          - else
            %td
              - if non_hmis_client.current_assessment.default?
                = link_to non_hmis_client.client_identifier, edit_deidentified_client_path(non_hmis_client)
              - else
                = link_to non_hmis_client.client_identifier, deidentified_client_path(non_hmis_client)

          %td= non_hmis_client.agency&.name

          %td= current_assessment&.assessment_score

          %td= current_assessment&.created_at

          %td
            -#  Status

          - if current_user.can_view_some_clients?
            %td
              - if non_hmis_client.client
                = link_to client_path(non_hmis_client.client) do
                  %span.icon-arrow-right2

%p= paginate @non_hmis_clients
