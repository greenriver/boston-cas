- size ||= 'md'
- include_blank ||= nil
.c-question__display
  %span.d-block= label
  %span.c-metric{ class: "c-metric--#{size}"}
    - if value.is_a? Array
      - if value.reject(&:blank?).any?
        - value.reject(&:blank?).map(&:to_s).map(&:titleize).each do |val|
          .mb-4= val
      - elsif include_blank.present?
        = include_blank
      - else
        N/A
    - elsif value.in?([true, false])
      = yes_no(value)
    - else
      - if value.present?
        = value
      - elsif include_blank.present?
        = include_blank
      - else
        N/A
