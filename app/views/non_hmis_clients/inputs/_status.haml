%h3 Status
.row
  .col-sm-4
    .c-quesiton
      - label = 'Status'
      - if disabled
        = render 'non_hmis_clients/assessments/question_display', value: @non_hmis_client.available, label: label, size: :sm
      - else
        = f.input :available, collection: [['Active', true], ['Inactive', false], ['Ineligible', false]], label: label, input_html: {class: 'select2 select2--full-width'}
  .col-sm-4
    .c-quesiton
      - label = 'Date'
      - if disabled
        = render 'non_hmis_clients/assessments/question_display', value: @non_hmis_client.available_date, label: label, size: :sm
      - else
        = f.input :available_date, as: :date_picker,  disabled: disabled, label: label
  .col-sm-4
    .c-quesiton
      - label = 'Reason'
      - if disabled
        = render 'non_hmis_clients/assessments/question_display', value: @non_hmis_client.available_reason, label: label, size: :sm
      - else
        = f.input :available_reason, disabled: disabled, label: label
