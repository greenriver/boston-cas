%h3.detail-box--label Rules
.detail-box--value
  - requirements = @opportunity.requirements_with_inherited
  - if requirements.count > 0
    - requirements.each do |r| 
      = r.name
      - if r.variable.present?
        = r.display_for_variable
      %em.detail-box--requirement-source
        = "(#{r.requirer.name})"
      %br
  - else
    None

- if @sub_program.eligibility_requirement_notes?
  %h3.detail-box--label
    Additional Eligibility Requirements
  .detail-box--value
    = @sub_program.eligibility_requirement_notes