- multiple_routes = multiple_routes == true
= simple_form_for @filter, as: :filters, method: :get, url: path do |f|
  .row
    .col-3
      = f.input :start, as: :date_picker, input_html: { value: @start_date }, required: true
    .col-3
      = f.input :end, as: :date_picker, input_html: { value: @end_date }, required: true
    .col-3
      - if multiple_routes
        = f.input :match_routes, as: :select_2, collection: @filter.match_route_options_for_select, required: true, input_html: { multiple: true }
      - else
        = f.input :match_route, as: :select_2, collection: @filter.match_route_options_for_select, required: true, selected: @filter.match_routes&.first
    .col-3
      = f.input :program_types, as: :select_2, collection: @filter.program_type_options_for_select, input_html: { multiple: true }
  .row
    .col-3
      = f.input :agencies, as: :select_2, collection: @filter.agency_options_for_select, include_blank: false, input_html: { multiple: true }
    .col-3
      = f.input :household_types, as: :select_2, collection: @filter.household_type_options_for_select, input_html: { multiple: true }
    .col-3
      = f.input :veteran_statuses, as: :select_2, collection: @filter.veteran_status_options_for_select, include_blank: false, input_html: { multiple: true }
    .col-3
      = f.input :age_ranges, as: :select_2, collection: @filter.age_range_options_for_select, input_html: { multiple: true }
  .row
    .col-3
      = f.input :genders, as: :select_2, collection: @filter.gender_options_for_select, include_blank: false, input_html: { multiple: true }
    .col-3
      = f.input :races, as: :select_2, collection: @filter.race_options_for_select, input_html: { multiple: true }
    .col-3
      = f.input :ethnicities, as: :select_2, collection: @filter.ethnicity_options_for_select, include_blank: false, input_html: { multiple: true }
    .col-3
      = f.input :disabilities, as: :select_2, collection: @filter.disability_options_for_select, input_html: { multiple: true }
  %hr
  = f.submit 'Update Dashboard', class: 'btn btn-primary'