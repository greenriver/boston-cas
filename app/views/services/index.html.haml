.row
  .col-sm-8
    %h1= t '.title'
    - @prompt = t '.search_prompt'
  .col-sm-4.text-right
    - if can_edit_available_services?
      = link_to new_service_path, class: 'btn btn-primary' do
        %span.icon-plus
        Add a service

.table-responsive
  .c-card.c.card__flush.mb-4
    .c-card__content.p-0
      %table.table.table-striped.mb-0
        %thead
          %tr
            %th Service Name
            %th Edit
            %th Delete

        %tbody
          - @services.each do |service|
            %tr
              %td= service.name
              %td
                = link_to edit_service_path(service), class: 'btn btn-sm btn-secondary' do
                  %span.icon-pencil
                  Edit
              %td
                = link_to service, method: :delete, class: 'btn btn-sm btn-danger', data: {confirm: "Are you sure you'd like to delete this service: #{service.name}?" } do
                  %span.icon-cross
                  Delete
