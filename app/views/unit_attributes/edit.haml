= content_for :modal_title do
  Edit Attribute

= simple_form_for @attribute, url:  unit_unit_attribute_path(@unit, @attribute) do |f|
  = f.input :name, disabled: true
  = f.input :value, collection: @attribute.existing_values, input_html: { class: :select2, data: { tags: true }}, include_blank: true, hint: 'If you don\'t see the value required, type it in and select it'

  = f.button :submit

= content_for :page_js do
  :javascript
    $('.select2').select2();
