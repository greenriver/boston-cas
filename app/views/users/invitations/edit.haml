.row
  .col-sm-12
    %h2 Activate Account

    %p Hello #{@user.name},

    %p Please choose a password to begin using the Coordinated Access System.

.row
  .col-sm-4
    = simple_form_for @user, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
      = render "devise/shared/error_messages", resource: resource
      = f.hidden_field :invitation_token
      = render 'users/password_rules'

      %p
        = f.input :password
      %p
        = f.input :password_confirmation
      %p= f.button :submit, "Set Password and Sign In"
